<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
        >

    <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/user_food_fragment_image_button" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:src="@drawable/add_icon"
            android:background="#00FFFFFF"
            android:layout_margin="@dimen/activity_vertical_margin"

            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMPANY INC"
            android:id="@+id/user_food_fragment_company_name"

            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/user_food_fragment_image_button"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="oz."
            android:id="@+id/user_food_fragment_serving_size"
            android:layout_marginLeft="@dimen/drawer_list_margin"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/user_food_fragment_company_name"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Product Name"
            android:id="@+id/user_food_fragment_product_name"
            android:layout_below="@+id/user_food_fragment_company_name"
            android:layout_alignLeft="@+id/user_food_fragment_company_name"
            android:layout_alignStart="@+id/user_food_fragment_company_name"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="category"
            android:id="@+id/user_food_fragment_product_category"
            android:layout_below="@+id/user_food_fragment_product_name"
            android:layout_alignLeft="@+id/user_food_fragment_product_name"
            android:layout_alignStart="@+id/user_food_fragment_product_name"/>

</RelativeLayout>